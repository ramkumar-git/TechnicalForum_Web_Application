@using TechnicalQandAForum.ViewModels;
@model List<QuestionViewModel>
@{
    ViewBag.Title = "Search";
    if(ViewBag.str == null)
    {
        ViewBag.str = "";
    }
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header text-light bg-info">Search results for @ViewBag.str</div>
            <div class="card-body">
                @if (Model.Count > 0)
                {
                <table class="table">
                    @foreach (var ques in Model)
                    {
                        Html.RenderPartial("Question", ques);
                    }
                </table>
                }
                else
                {
                    <span class="text-danger">No results found</span>
                }
            </div>
        </div>
    </div>
</div>
