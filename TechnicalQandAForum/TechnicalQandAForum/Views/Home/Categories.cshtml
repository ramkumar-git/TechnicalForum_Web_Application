@model List<TechnicalQandAForum.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "Categories";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header text-light bg-info">
                Categories
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var cat in Model)
                    {
                        <li class="list-group-item list-group-item-action">@cat.CategoryId. @cat.CategoryName </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<script>
    $("a[href='/home/categories']").attr("Id", "active")
</script>